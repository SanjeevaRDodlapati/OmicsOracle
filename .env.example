# Environment Configuration
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=omics_oracle
MONGODB_COLLECTION_PREFIX=omics_

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ChromaDB Configuration
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION=omics_vectors

# File Storage
UPLOAD_DIR=./data/uploads
TEMP_DIR=./data/temp
MAX_FILE_SIZE=100000000  # 100MB

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# GEO API Configuration
GEO_BASE_URL=https://www.ncbi.nlm.nih.gov/geo/query/acc.cgi
GEO_API_KEY=
GEO_BATCH_SIZE=10
GEO_REQUEST_DELAY=1

# Processing Configuration
MAX_CONCURRENT_JOBS=5
BATCH_SIZE=50
PROCESSING_TIMEOUT=3600

# Monitoring and Logging
SENTRY_DSN=
LOG_FILE=./logs/omics_oracle.log
METRICS_ENABLED=true

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
